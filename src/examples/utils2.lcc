// Retorna a string do mes correspondente
def retornaMes(int mesNumero) {

    string mes = "";

    if (mesNumero == 1) {
        mes = "Janeiro";
    } else if (mesNumero == 2) {
        mes = "Fevereiro";
    } else if (mesNumero == 3) {
        mes = "Marco";
    } else if (mesNumero == 4) {
        mes = "Abril";
    } else if (mesNumero == 5) {
        mes = "Maio";
    } else if (mesNumero == 6) {
        mes = "Junho";
    } else if (mesNumero == 7) {
        mes = "Julho";
    } else if (mesNumero == 8) {
        mes = "Agosto";
    } else if (mesNumero == 9) {
        mes = "Setembro";
    } else if (mesNumero == 10) {
        mes = "Outubro";
    } else if (mesNumero == 11) {
        mes = "Novembro";
    } else if (mesNumero == 12) {
        mes = "Dezembro";
    } else {
        mes = "Numero invalido";
    }

    print(mes);

    return mes;
}

